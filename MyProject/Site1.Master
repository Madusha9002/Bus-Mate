        <script>
            $(function () {
                $body = $("body");
                
                get_logged_user();
                $(document).on({
                    ajaxStart: function () {
                        $body.addClass("loading");
                    },
                    ajaxStop: function () {
                        $body.removeClass("loading");
                    }
                });

                var modal = document.getElementById('id01');

                // When the user clicks anywhere outside of the modal, close it
                window.onclick = function (event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }

            });
            function sign_out_user() {
                var token = mycookie();
                var userId = $('#user_id').text();
                $.ajax({
                    type: "GET",
                    url: "api/myapi/signOutUser",
                    contentType: "application/json; charset=utf-8",
                    data: { userId: userId, token: token },
                    dataType: "json",
                    success: function (data) {
                        if (data.status == 1) {
                            window.location.href = "Default.aspx";
                        }
                    },
                    error: function (request) {
                        handle_error(request);
                    },
                    beforeSend: function (xhr, settings) { xhr.setRequestHeader('Authorization', mycookie()); }
                });
            }
            function get_logged_user() {
                var LoggedUser = mycookie();
                $.ajax({
                    type: "GET",
                    url: "api/myapi/getUserName",
                    contentType: "application/json; charset=utf-8",
                    data: { LoggedUser: LoggedUser },
                    dataType: "json",
                    success: function (data) {
                        $('#user_id').text(data);
                        $('#btnAdminPanel').show();
                        $('#sign_out').show();
                        $('#sign_in').hide();
                    },
                    error: function (request) {
                        if (request.status = "401") {
                            $('#btnAdminPanel').hide();
                            $('#sign_out').hide();
                            $('#sign_in').show();
                        }
                    },
                    beforeSend: function (xhr, settings) { xhr.setRequestHeader('Authorization', mycookie()); }
                });
            }
            function GoToManageHirings(){
                window.location.href="ManageHirings.aspx";
            }
            function sign_in_user() {
                window.location.href = "SystemLogin.aspx";
            }
        </script>
</head>

